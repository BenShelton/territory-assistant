{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest",
      "leaflet",
      "leaflet-draw",
      "vuetify",
      "jest-fetch-mock"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "UnitTest/*": [
        "tests/unit/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts",
    "lambda/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
