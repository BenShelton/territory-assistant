{
  "name": "territory-assistant",
  "version": "0.1.0",
  "private": true,
  "license": "GPL-3.0-or-later",
  "scripts": {
    "serve": "npm-run-all --parallel serve:**",
    "serve:app": "vue-cli-service serve",
    "serve:lambda": "netlify-lambda serve lambda",
    "build": "npm-run-all --parallel build:**",
    "build:app": "vue-cli-service build",
    "build:lambda": "netlify-lambda build lambda",
    "test": "npm run lint -- --no-fix && npm run test:unit -- --bail",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@mdi/font": "^4.5.95",
    "core-js": "^3.3.2",
    "roboto-fontface": "*",
    "vue": "^2.6.10",
    "vue-router": "^3.1.3",
    "vuetify": "^2.1.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.6.0",
    "@types/aws-lambda": "^8.10.34",
    "@types/jest": "^24.0.11",
    "@types/node": "^12.12.5",
    "@vue/cli-plugin-babel": "^4.0.0",
    "@vue/cli-plugin-eslint": "^4.0.0",
    "@vue/cli-plugin-router": "^4.0.0",
    "@vue/cli-plugin-typescript": "^4.0.0",
    "@vue/cli-plugin-unit-jest": "^4.0.0",
    "@vue/cli-plugin-vuex": "^4.0.0",
    "@vue/cli-service": "^4.0.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^9.4.2",
    "netlify-lambda": "^1.6.3",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "typescript": "~3.5.3",
    "vue-cli-plugin-vuetify": "^1.1.1",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.3.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged && npm run test:unit -- -o",
    "prepare-commit-msg": "exec < /dev/tty && git cz --hook",
    "pre-push": "npm run test"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,vue,ts}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
